cabal-version:       >=1.10

library
  exposed-modules:     WhileLanguage,
                       Label
--                       ConcreteSemantics,
--                       ConcreteSemanticsReadVars,
--                       ConcreteSemanticsFailedReads,
--                       ConcreteSemanticsDeadWrites,
--                       ControlFlowGraph,
--                       IntervalAnalysis,
--                       IntervalAnalysisReadVars,
--                       IntervalAnalysisFailedReads,
--                       IntervalAnalysisDeadWrites,

                       Vals.Concrete.Val
                       Vals.Concrete.Semantic
                       Vals.Interval.Val
                       Vals.Interval.Semantic

                       Props.FailedReads.Prop
                       Props.FailedReads.Concrete
                       Props.FailedReads.Interval

                       Props.ReadVars.Prop
                       Props.ReadVars.Concrete
                       Props.ReadVars.Interval

