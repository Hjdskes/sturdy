                       sturdy-lib,
                       text,
                       containers,
                       mtl,
                       numeric-limits,
                       hashable,
                       random
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite specs
  type:                exitcode-stdio-1.0
  ghc-options:         -Wall
  hs-source-dirs:      test
  main-is:             Spec.hs
  build-depends:       base,
                       containers,
                       text,
                       QuickCheck,
                       hspec,
                       hspec-core,
                       numeric-limits,
                       sturdy-lib,
                       sturdy-while
  default-language:    Haskell2010
  other-modules:       Soundness
                       WhileLanguageSoundness

                       Specs.IntervalSpec
                       Specs.FailedReadsSpec
                       Specs.ReadVarsSpec
